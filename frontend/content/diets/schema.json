{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Diet Content Schema",
  "description": "JSON Schema for validating diet content files",
  "type": "object",
  "required": [
    "title",
    "shortSummary",
    "whoItsFor",
    "cautions",
    "goals",
    "corePrinciples",
    "dailyTargets",
    "weeklyTargets",
    "foodsToFocus",
    "foodsToLimit",
    "portionGuide",
    "sampleDayMenu",
    "shoppingList",
    "tips",
    "commonMistakes",
    "faq",
    "references"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Short diet title"
    },
    "shortSummary": {
      "type": "string",
      "minLength": 50,
      "maxLength": 500,
      "description": "Brief summary (200-300 chars target)"
    },
    "whoItsFor": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Target audience bullet points"
    },
    "cautions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["group", "warning"],
        "properties": {
          "group": { "type": "string" },
          "warning": { "type": "string" }
        }
      },
      "description": "Who should be cautious"
    },
    "goals": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "weight_loss",
          "blood_pressure",
          "ldl_cholesterol",
          "glycemic_control",
          "brain_health",
          "heart_health",
          "sustainability",
          "muscle_building",
          "longevity",
          "gut_health",
          "inflammation",
          "energy",
          "diabetes_management"
        ]
      },
      "minItems": 1,
      "description": "Diet goal tags"
    },
    "corePrinciples": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 5,
      "maxItems": 10,
      "description": "5-10 core principles"
    },
    "dailyTargets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "target", "note"],
        "properties": {
          "item": { "type": "string" },
          "target": { "type": "string" },
          "note": { "type": "string" }
        }
      }
    },
    "weeklyTargets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "target", "note"],
        "properties": {
          "item": { "type": "string" },
          "target": { "type": "string" },
          "note": { "type": "string" }
        }
      }
    },
    "foodsToFocus": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "examples"],
        "properties": {
          "category": { "type": "string" },
          "examples": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "foodsToLimit": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "examples"],
        "properties": {
          "category": { "type": "string" },
          "examples": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "portionGuide": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "portion", "note"],
        "properties": {
          "item": { "type": "string" },
          "portion": { "type": "string" },
          "note": { "type": "string" }
        }
      }
    },
    "sampleDayMenu": {
      "type": "object",
      "required": ["breakfast", "lunch", "dinner", "snacks"],
      "properties": {
        "breakfast": {
          "type": "object",
          "required": ["name", "description"],
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" }
          }
        },
        "lunch": {
          "type": "object",
          "required": ["name", "description"],
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" }
          }
        },
        "dinner": {
          "type": "object",
          "required": ["name", "description"],
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" }
          }
        },
        "snacks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    "shoppingList": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "items"],
        "properties": {
          "category": { "type": "string" },
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "tips": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 3
    },
    "commonMistakes": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 3
    },
    "faq": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["question", "answer"],
        "properties": {
          "question": { "type": "string" },
          "answer": { "type": "string" }
        }
      },
      "minItems": 3
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "url", "note"],
        "properties": {
          "title": { "type": "string" },
          "url": { "type": "string" },
          "note": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
